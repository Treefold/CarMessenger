<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CarMessenger</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>

</head>
<body>
    @if (Request.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("CarMessenger", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    }
    <div class="container body-content">

        @{
            var dangerMsgs = ViewBag.DangerMsgs as List<string>;
            var warningMsgs = ViewBag.WarningMsgs as List<string>;
            var successMsgs = ViewBag.SuccessMsgs as List<string>;
            var infoMsgs = ViewBag.InfoMsgs as List<string>;
            if (dangerMsgs != null)
            {
                foreach (var dangerMsg in dangerMsgs)
                {
                    <div class="alert">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong>USP? </strong> @dangerMsg
                    </div>
                }
            }
            if (warningMsgs != null)
            {
                foreach (var warningMsg in warningMsgs)
                {
                    <div class="alert warning">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong>Well... </strong> @warningMsg
                    </div>
                }
            }
            if (successMsgs != null)
            {
                foreach (var successMsg in successMsgs)
                {
                    <div class="alert success">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong>Success! </strong> @successMsg
                    </div>
                }
            }
            if (infoMsgs != null)
            {
                foreach (var infoMsg in infoMsgs)
                {
                    <div class="alert info">
                        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
                        <strong>Info: </strong> @infoMsg
                    </div>
                }
            }
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CarMessenger (Mihai-Daniel Surcea)</p>
        </footer>
    </div>

    @*@Scripts.Render("~/bundles/jquery")*@\

    <!--Reference the jQuery library. -->
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

