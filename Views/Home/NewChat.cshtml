@model CarMessenger.Models.NewChat

@{
    ViewBag.Title = "Add a New Chat";
}

<div class="d-flex w-100 justify-content-center">
    <div class="col-sm-10 col-md-8">
        <div class="main-bg">
            <h2 class="main-header">@ViewBag.Title</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.carPlate, htmlAttributes: new { @class = "control-label w-100" })
                        <div class="w-100">
                            @Html.EditorFor(model => model.carPlate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.carPlate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.carCountryCode, htmlAttributes: new { @class = "control-label w-100" })
                        <div class="w-100">
                            @Html.EditorFor(model => model.carCountryCode, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.carCountryCode, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group d-flex justify-content-between">
                        <span>
                            <button class="btn btn-info"> @Html.ActionLink("Back to Chat", "Index", null, new { Style = "color:White; text-decoration: none;" }) </button>
                        </span>
                        <span>
                            <input type="submit" value="Add Chat" class="btn btn-success" />
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
